project : : : build-dir bin ;

use-project utils : utils ;

alias utilslib : utils//utilslib ;

lib C++QED : quantumdata structure quantumtrajectory quantumoperator utilslib ;

alias executables_link_against : : : : <library>C++QED <library>elements//el <library>utilslib <library>utils//flens ;

# Core
build-project quantumdata       ;
build-project structure         ;
build-project quantumtrajectory ;

# Helpers
build-project quantumoperator   ;

# Elements
build-project elements  ;

# Scripts
build-project scripts ;
alias fewerScripts : scripts//fewerScripts ;
