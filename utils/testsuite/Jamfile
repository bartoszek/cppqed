project : requirements <library>..//utilslib ;

lib boost_test_lib : : <name>boost_unit_test_framework ;

import testing ;

for local ccfile in [ glob *.cc : TMP_Tools*.cc Blitz2FLENS.cc BlitzArraySliceIteratorTMP.cc ]
{
	unit-test $(ccfile:B) : $(ccfile) boost_test_lib : <define>BOOST_TEST_DYN_LINK ;
}

compile TMP_Tools.cc ;
compile BlitzArraySliceIteratorTMP.cc ;

for local ccfile in [ glob TMP_ToolsError*.cc ]
{
	compile-fail $(ccfile) ;
}

unit-test Blitz2FLENS : Blitz2FLENS.cc boost_test_lib : <define>BOOST_TEST_DYN_LINK <library>..//flens <library>..//blitz ;

