use-project /lib_project : src ;

project Utils
	: usage-requirements
	  <include>include 
	  <variant>debug:<define>BZ_DEBUG 
	  <cxxflags>"-DGSL_CBLAS" # This is needed so that FLENS use the CBLAS implementation of GSL
	: build-dir bin
	;

alias Utilslib : /lib_project//Utils ;

build-project /lib_project ;
build-project test         ;
build-project testsuite    ;


lib blitzlib : : <name>blitz ;

lib gsllib      : : <name>gsl      ;
lib gslcblaslib : : <name>gslcblas ;


import feature : feature ;
feature with-flens : yes no : incidental propagated ;

lib flenslib : : <name>flens <link>shared <with-flens>yes ;



