# General-purpose Jamroot, mainly for Debian/Ubuntu

project : usage-requirements
	  <include>include 
	  <variant>debug:<define>BZ_DEBUG 
	  <define>GSL_CBLAS # This is needed so that FLENS use the CBLAS implementation of GSL
	  <with-flens>no:<define>DO_NOT_USE_FLENS
	: build-dir bin
	;

path-constant TOP : .. ;

alias utils : src//utils ;

build-project src       ;
build-project test      ;
build-project testsuite ;


lib blitz gsl gslcblas ;


import feature : feature ;
feature with-flens : yes no : incidental propagated ;

lib flens : : <name>flens <with-flens>yes ;
