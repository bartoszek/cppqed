for local ccfile in [ glob *.cc ]
{
	exe $(ccfile:B) : $(ccfile) ..//executables_link_against ;
}

ccfilesExceptHardScripts = [ glob *.cc : 6qbits.cc 10qbits.cc ] ;

alias exceptHardScripts : $(ccfilesExceptHardScripts:B) ;

alias fewerScripts : PTLA_Evolved PTLA_C++QED PumpedLossyQbit PTLA_EvolvedHL PumpedLossyMode_Evolved PumpedLossyMode_C++QED QbitMode_C++QED QbitMode_Evolved QbitMode_Matrix Ring Ring_Evolved ;
